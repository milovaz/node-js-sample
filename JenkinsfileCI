pipeline {
    environment {
        SCMVar = checkout scm
    }
    agent any
    tools {nodejs "node"}
    stages {
            
        stage('Git') {
          steps {   
            sayHello "$SCMVar.GIT_COMMIT"
          }
        }
            
        stage('Build') {
          steps {
            sh 'npm install'
          }
        }
         
        stage('Test') {
          steps {
             sh 'npm test'
          }
        }      
    }
}
