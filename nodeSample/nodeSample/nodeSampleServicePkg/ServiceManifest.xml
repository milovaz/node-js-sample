<?xml version="1.0" encoding="utf-8"?>
<ServiceManifest Name="nodeSampleServicePkg" Version="1.0.1"
                 xmlns="http://schemas.microsoft.com/2011/01/fabric" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >

   <ServiceTypes>
      <StatelessServiceType ServiceTypeName="nodeSampleServiceType" UseImplicitHost="true">
   </StatelessServiceType>
   </ServiceTypes>
   
   <CodePackage Name="Code" Version="1.0.1">
      <EntryPoint>
         <ContainerHost>
            <ImageName>milovaz/node-js-sample:latest</ImageName>
            <Commands></Commands>
         </ContainerHost>
      </EntryPoint>
      <EnvironmentVariables> 
        <EnvironmentVariable Name="JENKINS_NAME_TESTE" Value="[JENKINS_NAME_TESTE]"/>
      </EnvironmentVariables> 
   </CodePackage>

   <Resources>
        <Endpoints>
            <Endpoint Name="nodeSampleServiceEndpoint" UriScheme="http" Port="5000" Protocol="http"/>
        </Endpoints>
    </Resources>
 </ServiceManifest>
